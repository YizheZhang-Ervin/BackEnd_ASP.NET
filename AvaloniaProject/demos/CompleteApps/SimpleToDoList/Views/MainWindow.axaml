<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SimpleToDoList.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="300" Height="500" Padding="4"
        x:Class="SimpleToDoList.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SimpleToDoList">

    <Design.DataContext>
        <!-- 设置IDE预览器数据上下文DataContext -->
        <!-- 运行时上下文用在App.axaml.cs -->
        <vm:MainViewModel />
    </Design.DataContext>

    <!--root grid起个名字 -->
    <Grid RowDefinitions="Auto, *, Auto"
          x:Name="Root">
        <!-- 标题text block. 样式用Style.Classes -->
        <TextBlock Text="My ToDo-List" Classes="h1" />
        <!-- 滚动布局 -->
        <ScrollViewer Grid.Row="1">
            <!-- 展示所有被新增的ToDoItems -->
            <ItemsControl ItemsSource="{Binding ToDoItems}">
                <!-- ItemTemplate定义item展现形式 -->
                <ItemsControl.ItemTemplate>
                    <!-- 用选择框和删除按钮展示 -->
                    <DataTemplate DataType="vm:ToDoItemViewModel">
                        <Grid ColumnDefinitions="*, Auto">
                            <CheckBox IsChecked="{Binding IsChecked}"
                                      Content="{Binding Content}" />
                            <!-- 用Root-Grid获取MainViewModel -->
                            <!-- 编译绑定要DataContext -->
                            <!-- CommandParameter是正在处理的local的ToDoItemViewModel-->
                            <Button Grid.Column="1"
                                    Command="{Binding #Root.((vm:MainViewModel)DataContext).RemoveItemCommand}"
                                    CommandParameter="{Binding .}">
                                <!-- 动态绑定icon -->
                                <PathIcon Data="{DynamicResource DeleteIconData}"
                                          Height="15"
                                          Foreground="Red" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- TextBox用于新增ToDoItems -->
        <TextBox Grid.Row="2"
                 Text="{Binding NewItemContent}"
                 Watermark="Add a new Item">
            <TextBox.InnerRightContent>
                <!-- 新增按钮 -->
                <Button Command="{Binding AddItemCommand}">
                    <PathIcon Data="{DynamicResource AcceptIconData}"
                              Foreground="Green" />
                </Button>
            </TextBox.InnerRightContent>
            <!-- KeyBindings可以定义KeyGestures  -->
            <TextBox.KeyBindings>
                <KeyBinding Gesture="Enter" Command="{Binding AddItemCommand}" />
            </TextBox.KeyBindings>
        </TextBox>
    </Grid>

</Window>